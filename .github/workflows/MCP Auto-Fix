name: MCP Auto-Fix
on:
  workflow_run:
    workflows: [ "CI Tests", "Build and Deploy" ]
    types: [ completed ]

jobs:
  auto-fix:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v3

      - name: Run MCP GitHub Fixes
        run: |
          npx -y @modelcontextprotocol/server-github --token ${{ secrets.GITHUB_PAT }}
